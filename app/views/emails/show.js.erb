if (document.getElementById("email_<%= @email.id %>").getElementsByTagName("td")[0].className === "d-none") {
	document.getElementById("email_<%= @email.id %>").getElementsByTagName("td")[0].classList.remove("d-none");
} else {
	document.getElementById("email_<%= @email.id %>").getElementsByTagName("td")[0].classList.add("d-none");
}
	
